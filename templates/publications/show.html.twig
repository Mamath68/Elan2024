{% extends 'base.html.twig' %}

		{% block title %}
			Publications
		{% endblock %}

		{% block body %}
			<h1>
				Publications
			</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>
							Id
						</th>
						<td>
							{{ publication.id }}
						</td>
					</tr>
					<tr>
						<th>
							Body
						</th>
						<td>
							{{ publication.body }}
						</td>
					</tr>
					<tr>
						<th>
							Img
						</th>
						<td>
							{{ publication.img }}
						</td>
					</tr>
					<tr>
						<th>
							Published_at
						</th>
						<td>
							{{ publication.publishedAt ? publication.publishedAt|date('Y-m-d H:i:s') : '' }}
						</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('app_forum') }}">
				back to list
			</a>

			<a href="{{ path('app_publications_edit', {'id': publication.id}) }}">
				edit
			</a>

			{{ include('publications/_delete_form.html.twig') }}
		{% endblock %}
