{% extends 'base.html.twig' %}

{% block title %}Publications index{% endblock %}

{% block body %}
    <h1>Publications index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Body</th>
                <th>Img</th>
                <th>Published_at</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for publication in publications %}
            <tr>
                <td>{{ publication.id }}</td>
                <td>{{ publication.body }}</td>
                <td>{{ publication.img }}</td>
                <td>{{ publication.publishedAt ? publication.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_publications_show', {'id': publication.id}) }}">show</a>
                    <a href="{{ path('app_publications_edit', {'id': publication.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_publications_new') }}">Create new</a>
{% endblock %}
