{% extends 'base.html.twig' %}

		{% block title %}
			Register
		{% endblock %}

		{% block body %}
			<div class="flex items-center justify-center min-h-screen bg-gray-100">
				<div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
					<h1 class="mb-6 text-2xl font-bold text-center">
						Register
					</h1>

					{{ form_start(registrationForm) }}
					<div class="mb-4">
						{{ form_label(registrationForm.pseudo, null, {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}
						) }}
						{{ form_widget(registrationForm.pseudo, {'attr': {'class': 'w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:ring focus:border-blue-300'}}
						) }}
						{{ form_errors(registrationForm.pseudo) }}
					</div>

					<div class="mb-4">
						{{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}
						) }}
						{{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:ring focus:border-blue-300'}}
						) }}
						{{ form_errors(registrationForm.email) }}
					</div>

					<div class="mb-4">
						{{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block mb-1 text-sm font-medium text-gray-700'}}
						) }}
						{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-3 py-2 text-gray-700 border rounded-lg focus:outline-none focus:ring focus:border-blue-300'}}
						) }}
						{{ form_errors(registrationForm.plainPassword) }}
					</div>

					<div class="mb-4">
						{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-checkbox text-blue-600'}}
						) }}
						{{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'inline-block ml-2 text-sm text-gray-700'}}
						) }}
						{{ form_errors(registrationForm.agreeTerms) }}
					</div>

					<button type="submit" class="w-full px-4 py-2 text-white bg-blue-500 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">
						Register
					</button>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		{% endblock %}

